# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=15

[battery]
command=battery -np
#label=Battery   
interval=10

[backlight]
command=backlight -np
#label=Backlight   
interval=30

[memory]
command=memory
label= 
interval=30

[temperature]
command=temperature
label= 
interval=10
T_WARN=70
T_CRIT=90
#SENSOR_CHIP=""

[cpu_usage2]
command=cpu_usge -l ""
#label=ﴮ 
markup=pango
interval=persist

[arch-update]
command=arch-update 
interval=3600
markup=pango

[public-ip]
command=echo " $(wget -qO - icanhazip.com)"
interval=once

[weather]
color=#ffffff
command=curl -s 'wttr.in/{Sitges}?format=3'
interval=once

[time]
command=date '+%H:%M:%S %d-%m-%Y'
interval=1
