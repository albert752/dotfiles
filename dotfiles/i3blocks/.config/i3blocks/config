# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=15

[memory]
command=memory
label=RAM   
interval=30

[temperature]
command=temperature
label=TEMP   
interval=10
T_WARN=70
T_CRIT=90
#SENSOR_CHIP=""

[cpu_usage2]
command=cpu_usge
markup=pango
interval=persist

[arch-update]
command=arch-update 
interval=3600
markup=pango

[public-ip]
command=echo "pub_ip: $(wget -qO - icanhazip.com)"
interval=once

[weather]
color=#ffffff
command=curl -s 'wttr.in/{Barcelona}?format=3'
interval=once

[time]
command=date '+%H:%M:%S %d-%m-%Y'
interval=1
